<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_changepass"
    tools:context=".View.ForgetPass">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_forgetpass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Quên Mật Khẩu"
        android:textSize="40sp"
        android:textColor="@color/black"/>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/edt_layoutforgetpasscode2"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_code"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/tv_forgetpass"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:hint="Nhập Username"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_forgot_usn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/edt_layoutforgetpasscode"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_code"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/edt_layoutforgetpasscode2"
        android:layout_centerInParent="true"
        android:hint="Nhập mã đăng kí"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_forgot_recover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/edt_layoutnewpass_forget"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_lock"
        app:endIconMode="password_toggle"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/edt_layoutforgetpasscode"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:hint="Nhập mật khẩu mới"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/edt_layoutnewpasscomfirm_forget"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_lock"
        app:endIconMode="password_toggle"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/edt_layoutnewpass_forget"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:hint="Nhập lại mật khẩu mới"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_forgot_confpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_comfirm"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_layoutnewpasscomfirm_forget"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue_2"
        android:gravity="center"
        android:text="Xác Nhận"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="10dp"/>



</RelativeLayout>