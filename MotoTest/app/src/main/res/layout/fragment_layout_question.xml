<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Test.LayoutTestFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_normal"
            android:text="Khái niệm đường bộ được hiểu như thế nào là đúng?"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/iv_description"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/padding_normal"
            android:layout_marginRight="@dimen/padding_normal"
            android:src="@drawable/bienbaotest"
           />

        <LinearLayout
            android:id="@+id/layout_answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingBottom="@dimen/padding_normal"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tv_answer1_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/padding_normal"
                android:text="Đường, cầu đường bộ."
                android:textColor="@color/grey" />

        </LinearLayout>

        <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:id="@+id/layout_answer2"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/padding_normal"
                        android:paddingLeft="10dp"
                        android:paddingRight="@dimen/padding_normal">


                        <CheckBox
                            android:id="@+id/checkbox2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                        <TextView
                            android:id="@+id/tv_answer2_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_normal"
                            android:text="Đường, cầu đường bộ."
                            android:textStyle="bold"
                            android:textColor="@color/grey" />

                    </LinearLayout>

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:id="@+id/layout_answer3"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/padding_normal"
                        android:paddingLeft="@dimen/padding_normal"
                        android:paddingRight="@dimen/padding_normal">

                        <CheckBox
                            android:id="@+id/checkbox3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                        <TextView
                            android:id="@+id/tv_answer3_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_normal"
                            android:textStyle="bold"
                            android:text="Đường, cầu đường bộ."
                            android:textColor="@color/grey" />

                    </LinearLayout>

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:id="@+id/layout_answer4"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/padding_normal"
                        android:paddingLeft="@dimen/padding_normal"
                        android:paddingRight="@dimen/padding_normal">

                        <CheckBox
                            android:id="@+id/checkbox4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                        <TextView
                            android:id="@+id/tv_answer4_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_normal"
                            android:textStyle="bold"
                            android:text="Đường, cầu đường bộ."
                            android:textColor="@color/grey" />

                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/layout_explain_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_normal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_book"
                            app:tint="@color/orange" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_normal"
                            android:text="Giải thích đáp án"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_text_normal"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_explain_content"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_normal"
                        android:layout_marginLeft="@dimen/padding_normal"
                        android:layout_marginRight="@dimen/padding_normal"
                        android:background="@color/blue"
                        android:padding="@dimen/padding_normal"
                        android:text="Đường bộ không bao gồm các công trình phụ trợ khác.\n"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_text_normal"
                        android:textStyle="bold" />
                </LinearLayout>
        </LinearLayout>
</ScrollView>